@model IEnumerable<QuanLyThuVien.Models.Books>

@{
    ViewBag.Title = "Quản lý sách";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container-fluid">

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="row">
                <h6 class="col-md-9 font-weight-bold text-primary font-Title">Quản lý sách</h6>
                <div class="col-md-3">
                    <a href="@Url.Action("Create", "ql_Sach")" class="btn btn-success btn-user btn-block" style="font-weight:bold">
                        <i class="fa fa-fw fa-plus-square"></i> Thêm mới sách
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model.title)
                            </th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model.authors)
                            </th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model.categories)
                            </th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model.shortDescription)
                            </th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model.longDescription)
                            </th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model.count)
                            </th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model.publishedDate)
                            </th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model.status)
                            </th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model.thumbnailUrl)
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="max-width: 200px;">
                                    <p>
                                        @Html.DisplayFor(modelItem => item.title)
                                    </p>
                                </td>
                                <td style="max-width: 220px; width: 200px;">
                                    @{ //Hiển thị tên tác giả từ chuỗi id
                                        if (item.authors != null)
                                        {
                                            int i = 0;
                                            string[] authorList = item.authors.Split(',');
                                            foreach (var ath in authorList)
                                            {
                                                foreach (var athName in ViewBag.listAuthor)
                                                {
                                                    if (ath.Equals(athName.id))
                                                    {
                                                        if (i == 2)
                                                        {
                                                            <p>
                                                                @athName.name ...
                                                            </p>
                                                            break;
                                                        }
                                                        else
                                                        {
                                                            <p>
                                                                @athName.name
                                                            </p>                                                           
                                                        }
                                                    }
                                                }
                                                i++;
                                                if (i == 3)
                                                {
                                                    break;
                                                }
                                            }
                                        }
                                    }
                                </td>
                                <td style="max-width: 220px; width: 200px;">
                                    @{
                                        if (item.categories != null)
                                        {
                                            int i = 0;
                                            string[] categoriesList = item.categories.Split(',');
                                            foreach (var cate in categoriesList)
                                            {
                                                foreach (var cateName in ViewBag.listCategories)
                                                {
                                                    if (cate.Equals(cateName.id))
                                                    {
                                                        if (i == 2)
                                                        {
                                                            <p>
                                                                @cateName.name ...
                                                            </p>
                                                            break;
                                                        }
                                                        else
                                                        {
                                                            <p>
                                                                @cateName.name
                                                            </p>
                                                        }
                                                    }
                                                }
                                                i++;
                                                if (i == 3)
                                                {
                                                    break;
                                                }
                                            }
                                        }
                                    }
                                </td>
                                <td style="max-width: 200px;">
                                    <p>
                                        @Html.DisplayFor(modelItem => item.shortDescription)
                                    </p>
                                </td>
                                <td style="max-width: 300px;">
                                    <p>
                                        @Html.DisplayFor(modelItem => item.longDescription)
                                    <p>
                                </td>
                                <td class="text-center">
                                    <p>
                                        @Html.DisplayFor(modelItem => item.count)
                                    </p>

                                </td>
                                <td style="width:130px; max-width: 150px;">
                                    @{
                                        DateTime date_temp = new DateTime(0001, 01, 01);
                                        if (DateTime.Compare(item.publishedDate, date_temp) == 0)
                                        {
                                            <p>
                                                Chưa có thông tin
                                            </p>
                                        }
                                        else
                                        {
                                            @Html.DisplayFor(modelItem => item.publishedDate)
                                        }
                                    }
                                </td>
                                <td class="text-center">
                                    <p>
                                        @Html.DisplayFor(modelItem => item.status)
                                    </p>

                                </td>
                                <td style="max-width: 150px;">
                                    <img src="@Html.DisplayFor(modelItem => item.thumbnailUrl)" style="max-width: 150px; max-height:75px;" />
                                </td>

                                <td class="link-action">
                                    <a class="link-edit" href="@Url.Action("Edit", "ql_Sach" , new { id = item._id})" onclick="return confirm('Bạn có muốn sửa sách @Html.DisplayFor(modelItem => item.title)?')">
                                        <i class="fas fa-fw fa-edit"></i>Sửa
                                    </a><br />
                                    <a class="link-delete" href="@Url.Action("Delete", "ql_Sach" , new { id = item._id})" onclick="return confirm('Bạn có muốn xoá sách @Html.DisplayFor(modelItem => item.title)?')">
                                        <i class="fas fa-fw fa-trash"></i>Xoá
                                    </a><br />
                                    <a class="link-detail" href="@Url.Action("Detail", "ql_Sach" , new { id = item._id})">
                                        <i class="fas fa-fw fa-info"></i>Chi tiết
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@{
    if (ViewBag.MsEdit != null)
    {
        Response.Write("<script>alert('" + ViewBag.MsEdit + "')</script>");
        ViewBag.MsEdit = null;
    }
    if (ViewBag.MsDelete != null)
    {
        Response.Write("<script>alert('Đã xoá sách " + ViewBag.MsDelete + "')</script>");
        ViewBag.MsDelete = null;
    }
}