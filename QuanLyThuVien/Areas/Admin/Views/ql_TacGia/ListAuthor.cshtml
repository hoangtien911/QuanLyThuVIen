@model IEnumerable<QuanLyThuVien.Models.Author>

@{
    ViewBag.Title = "Danh sách tác giả";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="row">
                <h6 class="col-md-9 font-weight-bold text-primary font-Title">Quản lý tác giả</h6>
                <div class="col-md-3">
                    <a href="@Url.Action("Create", "ql_TacGia")" class="btn btn-success btn-user btn-block" style="font-weight:bold">
                        <i class="fa fa-fw fa-plus-square"></i> Thêm mới tác giả
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr class="text-center">
                            <th>
                                @Html.DisplayNameFor(model => model.name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.website)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.note)
                            </th>
                            <th style="width: 60px;">
                                @Html.DisplayNameFor(model => model.avatar)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td style="width: 200px;">
                                @Html.DisplayFor(modelItem => item.name)
                            </td>
                            <td style="width: 300px;">
                                @Html.DisplayFor(modelItem => item.email)
                            </td>
                            <td style="width: 300px;">
                                <p>
                                    @Html.DisplayFor(modelItem => item.website)
                                </p>
                            </td>
                            <td>
                                <p>
                                    @Html.DisplayFor(modelItem => item.note)
                                </p>
                            </td>
                            <td style="max-width: 150px;" class="text-center">
                                <img src="@Html.DisplayFor(modelItem => item.avatar)" style="max-width: 150px; max-height:75px;" />
                            </td>
                            <td class="link-action">
                                <a class="link-edit" href="@Url.Action("Edit", "ql_TacGia" , new { id = item.id})" onclick="return confirm('Bạn có muốn sửa tác giả @Html.DisplayFor(modelItem => item.name)?')">
                                    <i class="fas fa-fw fa-edit"></i>Sửa
                                </a><br />
                                <a class="link-delete" href="@Url.Action("Delete", "ql_TacGia" , new { id = item.id})" onclick="return confirm('Bạn có muốn xoá tác giả @Html.DisplayFor(modelItem => item.name)?')">
                                    <i class="fas fa-fw fa-trash"></i>Xoá
                                </a><br />
                                <a class="link-detail" href="@Url.Action("Detail", "ql_TacGia" , new { id = item.id})">
                                    <i class="fas fa-fw fa-info"></i>Chi tiết
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@{
    if (ViewBag.MsEdit != null)
    {
        Response.Write("<script>alert('" + ViewBag.MsEdit + "')</script>");
        ViewBag.MsEdit = null;
    }
    if (ViewBag.MsDelete != null)
    {
        Response.Write("<script>alert('Đã xoá tác giả " + ViewBag.MsDelete + "')</script>");
        ViewBag.MsDelete = null;
    }
}