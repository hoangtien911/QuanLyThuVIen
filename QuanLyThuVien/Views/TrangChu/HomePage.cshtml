                                    <div class="product__content content--center">
                                        <h4><a href="@Url.Action("ChiTietSach","Sach", new { id = item._id })">@item.title</a></h4>
                                        @{ //Hiển thị tên tác giả từ chuỗi id
                                            string authorName = "";
                                            if (item.authors != null)
                                            {
                                                int i = 0;
