<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!-- CSS -->
    <link rel="stylesheet" href="~/Areas/Admin/StyleSheet/css/bootstrap.css">
    <link rel="stylesheet" href="~/Areas/Admin/StyleSheet/vendors/perfect-scrollbar/perfect-scrollbar.css">
    <link rel="stylesheet" href="~/Areas/Admin/StyleSheet/vendors/simple-datatables/style.css">
    <link rel="stylesheet" href="~/Areas/Admin/JavaScript/choices.js/chosen.css">
    <link rel="stylesheet" href="~/Areas/Admin/JavaScript/quill/quill.snow.css">
    <link rel="stylesheet" href="~/Areas/Admin/JavaScript/datepicker/datepicker.css">
    <link rel="stylesheet" href="~/Areas/Admin/JavaScript/toats/toastr.min.css">   
    <link rel="stylesheet" href="~/Areas/Admin/StyleSheet/fontawesome-free-5.15.4-web/css/all.css">
    <!-- Custom CSS-->
    <link rel="stylesheet" href="~/Areas/Admin/StyleSheet/css/app.css">

</head>

<body>

    <div id="app">
        <div id="sidebar" class='active'>
            <div class="sidebar-wrapper active">
                <div class="sidebar-header">
                    <img src="~/Areas/Admin/image/logo.svg" alt="" srcset="">
                </div>
                <div class="sidebar-menu">
                    <ul class="menu">
                        <!---->
                        <li class='sidebar-title'>Tác vụ</li>
                        <li class="sidebar-item @(ViewContext.RouteData.Values["Controller"].ToString() == "ThongKe" ? "active" : "")">
                            <a href="@Url.Action("ThongKe","ThongKe")" class='sidebar-link'>
                                <i class="far fa-chart-bar" style="margin-right: 20px"></i> Thống kê
                            </a>
                        </li>
                        <!---->
                        <li class='sidebar-title'>Quản lý thư viện</li>
                        <li class="sidebar-item @(ViewContext.RouteData.Values["Controller"].ToString() == "ql_Sach" ? "active" : "")">
                            <a href="@Url.Action("ListBooks","ql_Sach")" class='sidebar-link'>
                                <i class="far fa-book" style="margin-right: 20px"></i> Quản lý sách
                            </a>
                        </li>
                        <li class="sidebar-item @(ViewContext.RouteData.Values["Controller"].ToString() == "ql_TacGia" ? "active" : "")">
                            <a href="@Url.Action("ListAuthor","ql_TacGia")" class='sidebar-link'>
                                <i class="far fa-address-book" style="margin-right: 20px"></i> Quản lý tác giả
                            </a>
                        </li>
                        <li class="sidebar-item @(ViewContext.RouteData.Values["Controller"].ToString() == "ql_TheLoai" ? "active" : "")">
                            <a href="@Url.Action("ListCategories","ql_TheLoai")" class='sidebar-link'>
                                <i class="far fa-book-spells" style="margin-right: 20px"></i> Quản lý thể loại
                            </a>
                        </li>
                        <li class="sidebar-item @(ViewContext.RouteData.Values["Controller"].ToString() == "ql_NguoiDung" ? "active" : "")">
                            <a href="@Url.Action("ListUser","ql_NguoiDung")" class='sidebar-link'>
                                <i class="far fa-users" style="margin-right: 20px"></i> Quản lý người dùng
                            </a>
                        </li>
                        <li class="sidebar-item @(ViewContext.RouteData.Values["Controller"].ToString() == "ql_PhieuMuon" ? "active" : "")">
                            <a href="@Url.Action("ListCallCard","ql_PhieuMuon")" class='sidebar-link'>
                                <i class="far fa-address-card" style="margin-right: 20px"></i> Quản lý phiếu mượn
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div id="main">
            <nav class="navbar navbar-header navbar-expand navbar-light">
                <button class="btn navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!---->
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav d-flex align-items-center navbar-light ms-auto">
                        <li class="dropdown">
                            <a href="#" data-bs-toggle="dropdown" class="nav-link dropdown-toggle nav-link-lg nav-link-user">
                                @{
                                    if (Request.Cookies["AdminCookies"] != null)
                                    {
                                        <div class="avatar me-1">
                                            <img src="@ViewBag.adminAvatar" alt="" srcset="">
                                        </div>
                                        <div class="d-none d-md-block d-lg-inline-block">@Request.Cookies["AdminCookies"]["username"]</div>
                                    }
                                }

                            </a>
                            <div class="dropdown-menu dropdown-menu-end">                               
                                <a class="dropdown-item" href="@Url.Action("DangXuat", "TaiKhoan", new { area = "" })"><i class="far fa-sign-out"></i> Đăng xuất</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
            <div class="main-content container-fluid" id="body_build">
                @RenderBody()
            </div>
        </div>
    </div>


    <!-- JavaScript -->
    <script src="~/Areas/Admin/JavaScript/jquery-3.6.0.js"></script>
    <script src="~/Areas/Admin/JavaScript/feather-icons/feather.js"></script>
    <script src="~/Areas/Admin/JavaScript/perfect-scrollbar/perfect-scrollbar.min.js"></script>
    <script src="~/Areas/Admin/JavaScript/simple-datatables/simple-datatables.js"></script>
    <script src="~/Areas/Admin/JavaScript/datepicker/bootstrap-datepicker.js"></script>
    <script src="~/Areas/Admin/JavaScript/choices.js/chosen.jquery.js"></script>
    <script src="~/Areas/Admin/JavaScript/quill/quill.js"></script>
    <script src="~/Areas/Admin/JavaScript/toats/toastr.min.js"></script>

    <script src="~/Areas/Admin/StyleSheet/vendors/chartjs/Chart.js"></script>

    <!-- Custom JS -->
    <script src="~/Areas/Admin/JavaScript/main.js"></script>
    <script src="~/Areas/Admin/JavaScript/app.js"></script>
    <script src="~/Areas/Admin/JavaScript/pages/form-editor.js"></script>

    <!--Area render script-->
    @RenderSection("scripts", required: false)
</body>
</html>

