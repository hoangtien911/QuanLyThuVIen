@model QuanLyThuVien.Models.Books

@{
    ViewBag.Title = "Thông tin sách " + Model.title;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">

    <div class="card o-hidden border-0 shadow-lg">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-5 img-detail">
                    <img src="@Html.DisplayFor(model => model.thumbnailUrl)"/>
                </div>
                <div class="col-lg-7">
                    <div class="text-md-right icon-back">
                        <a href="@Url.Action("ListBooks", "ql_Sach")">
                            <i class="fa fa-fw fa-times"></i>
                        </a>
                    </div>
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900">Chi tiết sách: @Model.title</h1>
                        </div>
                        <hr />
                        <div class="row details">
                            <div class="text-sm-center col-md-3 details-title">
                                @Html.DisplayNameFor(model => model.authors)
                            </div>
                            <div class="text-sm-left col-md-9">
                                @Html.DisplayFor(model => model.authors)
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="text-sm-center col-md-3 details-title">
                                @Html.DisplayNameFor(model => model.categories)
                            </div>
                            <div class="text-sm-left col-md-9">
                                @Html.DisplayFor(model => model.categories)
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="text-sm-center col-md-3 details-title">
                                @Html.DisplayNameFor(model => model.shortDescription)
                            </div>
                            <div class="text-sm-left col-md-9">
                                @Html.DisplayFor(model => model.shortDescription)
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="text-sm-center col-md-3 details-title">
                                @Html.DisplayNameFor(model => model.longDescription)
                            </div>
                            <div class="text-sm-left col-md-9">
                                @Html.DisplayFor(model => model.longDescription)
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="text-sm-center col-md-3 details-title">
                                @Html.DisplayNameFor(model => model.publishedDate)
                            </div>
                            <div class="text-sm-left col-md-9">
                                @Html.DisplayFor(model => model.publishedDate)
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="text-sm-center col-md-3 details-title">
                                @Html.DisplayNameFor(model => model.count)
                            </div>
                            <div class="text-sm-left col-md-9">
                                @Html.DisplayFor(model => model.count)
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="text-sm-center col-md-3 details-title">
                                @Html.DisplayNameFor(model => model.status)
                            </div>
                            <div class="text-sm-left col-md-9">
                                @Html.DisplayFor(model => model.status)
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-md-8">
                                <a href="@Url.Action("Edit", "ql_Sach", new { id = Model._id})" class="btn btn-warning btn-user btn-block" onclick="return confirm('Bạn có muốn sửa sách @Model.title?')">
                                    <i class="fa fa-fw fa-edit"></i> Sửa thông tin sách
                                </a>
                            </div>
                            <div class="col-md-4">
                                <a href="@Url.Action("Delete", "ql_Sach", new { id = Model._id})" class="btn btn-google btn-user btn-block" onclick="return confirm('Bạn có muốn xoá sách @Model.title?')">
                                    <i class="fa fa-fw fa-trash"></i> Xoá sách
                                </a>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>