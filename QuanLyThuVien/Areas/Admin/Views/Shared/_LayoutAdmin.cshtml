<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <!-- Custom fonts for this template-->
    <link href="~/StyleSheet/all.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <link href="~/StyleSheet/chosen/chosen.css" rel="stylesheet" />
    <!-- Custom styles for this template-->
    <link href="~/StyleSheet/admin.css" rel="stylesheet">
    <link href="~/StyleSheet/dataTables.bootstrap4.css" rel="stylesheet">
    
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <li>
                <!-- Sidebar - Brand -->
                <a class="sidebar-brand d-flex align-items-center justify-content-center" href="#" style="height:20px;">
                    <div class="sidebar-brand-text" style="font-size: 18px;">QUẢN LÝ THƯ VIỆN</div>
                </a>
            </li>
            <li>
                <!-- Sidebar - Brand -->
                <a class="sidebar-brand d-flex align-items-center justify-content-center" href="#" style="height:60px;">
                    <img src="~/Content/toppng.com-open-book-white-958x342 (1).png" style="height:30px; margin-top: -20px;"/>
                </a>
            </li>
            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Trang chủ</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                Quản lý
            </div>

            <!-- Nav Item - Pages Collapse Menu -->
            <!-- Quản lý sách -->
            <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "ql_Sach" ? "active" : "")">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseTwo"
                   aria-expanded="true" aria-controls="collapseTwo">
                    <i class="fas fa-fw fa-book"></i>
                    <span>Quản lý sách</span>
                </a>
                <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Tác vụ:</h6>
                        <a class="collapse-item" href="@Url.Action("Create","ql_Sach")">Thêm mới sách</a>
                        <a class="collapse-item" href="@Url.Action("ListBooks","ql_Sach")">Danh sách sách</a>
                    </div>
                </div>
            </li>
            <!-- Quản lý tác giả -->
            <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "ql_TacGia" ? "active" : "")">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseThree"
                   aria-expanded="true" aria-controls="collapseThree">
                    <i class="fas fa-fw fa-address-book"></i>
                    <span>Quản lý tác giả</span>
                </a>
                <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Tác vụ:</h6>
                        <a class="collapse-item" href="@Url.Action("Create","ql_TacGia")">Thêm mới tác giả</a>
                        <a class="collapse-item" href="@Url.Action("ListAuthor","ql_TacGia")">Danh sách tác giả</a>
                    </div>
                </div>
            </li>
            <!-- Quản lý thể loại -->
            <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "ql_TheLoai" ? "active" : "")">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseFour"
                   aria-expanded="true" aria-controls="collapseFour">
                    <i class="fas fa-fw fa-sort-alpha-down"></i>
                    <span>Quản lý thể loại</span>
                </a>
                <div id="collapseFour" class="collapse" aria-labelledby="headingFour" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Tác vụ:</h6>
                        <a class="collapse-item" href="@Url.Action("Create","ql_TheLoai")">Thêm mới thể loại</a>
                        <a class="collapse-item" href="@Url.Action("ListCategories","ql_TheLoai")">Danh sách thể loại</a>
                    </div>
                </div>
            </li>
            <!-- Quản lý phiếu mượn -->
            <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "ql_PhieuMuon" ? "active" : "")">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseFive"
                   aria-expanded="true" aria-controls="collapseFive">
                    <i class="fas fa-fw fa-credit-card"></i>
                    <span>Quản lý phiếu mượn</span>
                </a>
                <div id="collapseFive" class="collapse" aria-labelledby="headingFive" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Tác vụ:</h6>
                        <a class="collapse-item" href="@Url.Action("Create","ql_PhieuMuon")">Thêm mới phiếu mượn</a>
                        <a class="collapse-item" href="@Url.Action("ListCallCard","ql_PhieuMuon")">Danh sách phiếu mượn</a>
                    </div>
                </div>
            </li>
            <!-- Quản lý người dùng -->
            <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "ql_NguoiDung" ? "active" : "")">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseSix"
                   aria-expanded="true" aria-controls="collapseSix">
                    <i class="fas fa-fw fa-user"></i>
                    <span>Quản lý người dùng</span>
                </a>
                <div id="collapseSix" class="collapse" aria-labelledby="headingSix" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Tác vụ:</h6>
                        <a class="collapse-item" href="@Url.Action("Create","ql_NguoiDung")">Thêm mới người dùng</a>
                        <a class="collapse-item" href="@Url.Action("ListUser","ql_NguoiDung")">Danh sách người dùng</a>
                    </div>
                </div>
            </li>
           

            <!-- Nav Item - Tables -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("DangXuat", "TaiKhoan", new { area = "" })">
                    <i class="fas fa-fw fa-sign-out-alt"></i>
                    <span>Đăng xuất</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

        </ul>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">

                        <!-- Nav Item - Search Dropdown (Visible Only XS) -->                      
                        @{
                            if (Request.Cookies["AdminCookies"] != null)
                            {
                                <!-- Nav Item - User Information -->
                                <li class="nav-item dropdown no-arrow">
                                    <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <span class="mr-2 d-none d-lg-inline text-gray-600 small">Xin chào: @Request.Cookies["AdminCookies"]["name"] </span>
                                        <img class="img-profile rounded-circle"
                                             src="@Request.Cookies["AdminCookies"]["avatar"]">
                                    </a>
                                </li>
                            }
                        }
                    </ul>

                </nav>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                @RenderBody()
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Quản lý thư viện TT. Văn Quan với cơ sở dữ liệu Google Firebase</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <!-- Bootstrap core JavaScript-->
    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/Scripts/jquery.easing.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/Scripts/sb-admin-2.js"></script>
    <!-- Page level plugins -->
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery.dataTables.js"></script>
    <script src="~/Scripts/dataTables.bootstrap4.js"></script>
    <script src="~/Scripts/chosen/chosen.jquery.js"></script>
    <!-- Page level custom scripts -->
    <script src="~/Scripts/datatables-demo.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>

