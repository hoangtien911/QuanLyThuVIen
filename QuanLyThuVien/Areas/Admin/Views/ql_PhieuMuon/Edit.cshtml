@model QuanLyThuVien.Models.CallCard

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            <h4 class="text-center">Sửa thông tin phiếu mượn</h4>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <hr />
                            <div class="row text-sm-right">
                                @Html.LabelFor(model => model.id, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.id, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                </div>
                                @Html.LabelFor(model => model.status, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.DropDownListFor(model => model.status,
                                    new SelectList(new[] { "Đang mượn", "Đã trả", "Quá hạn", "Chưa cập nhật" }),
                                    new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="row text-sm-right">
                                @Html.LabelFor(model => model.user_id, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownListFor(model => model.user_id,
                                    new SelectList(ViewBag.listUser, "id", "username"),
                                    new { @class = "form-control", id = "select-user" })
                                    @Html.ValidationMessageFor(model => model.user_id, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row text-sm-right">
                                @Html.LabelFor(model => model.books_id, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.ListBoxFor(model => model.books_id_temp,
                                     new MultiSelectList(ViewBag.listBooks, "_id", "title"),
                                     new { @class = "form-control", id = "select-books" })
                                    @Html.ValidationMessageFor(model => model.books_id, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row text-sm-right">
                                @Html.LabelFor(model => model.date_issued, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.date_issued, new { htmlAttributes = new { @class = "form-control", @Value = @Model.date_issued.ToString("yyyy-MM-dd")} })
                                </div>
                            </div>
                            <div class="row text-sm-right">
                                @Html.LabelFor(model => model.date_return, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.date_return, new { htmlAttributes = new { @class = "form-control", @Value = @Model.date_return.ToString("yyyy-MM-dd") } })
                                </div>
                            </div>
                            <div class="row text-sm-right">
                                @Html.LabelFor(model => model.date_returned, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.date_returned, new { htmlAttributes = new { @class = "form-control", @Value = @Model.date_returned.ToString("yyyy-MM-dd") } })
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-md-2">
                                    <a href="@Url.Action("ListCallCard", "ql_PhieuMuon")" class="btn btn-google btn-user btn-block">
                                        <i class="fa fa-fw fa-undo"></i> Trở lại
                                    </a>
                                </div>
                                <div class="col-md-10">
                                    <button type="submit" class="btn btn-primary btn-user btn-block" id="btnSave">
                                        <i class="fa fa-fw fa-save"></i> Lưu
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@{
    if (ViewBag.MsEdit != null)
    {
        Response.Write("<script>alert('" + ViewBag.MsEdit + "')</script>");
        ViewBag.MsEdit = null;
    }
}
@section scripts{
    <script>
        $(function () {
            $("#select-user").chosen({
                no_results_text: "Không tìm thấy người dùng"
            });
            $("#select-books").chosen({
                no_results_text: "Không tìm thấy sách"
            });
        })
    </script>
}