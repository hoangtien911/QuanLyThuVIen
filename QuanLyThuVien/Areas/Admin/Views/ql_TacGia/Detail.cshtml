@model QuanLyThuVien.Models.Author

@{
    ViewBag.Title = "Thôn tin tác giả " + Model.name;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container" style="max-width:1100px;">

    <div class="card o-hidden border-0 shadow-lg">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row border-right">
                <div class="col-lg-4 d-flex flex-column align-items-center text-center align-self-center">
                    <img class="rounded-circle" style="width:150px; height: 150px;" src="@Html.DisplayFor(model => model.avatar)" />
                    <span class="font-weight-bold" style="color: black; margin-top: 10px;">@Model.name</span>
                    <span class="text-black-50">@Model.email</span>

                </div>
                <div class="col-lg-8 border-left">
                    <div class="text-md-right icon-back">
                        <a href="@Url.Action("ListAuthor", "ql_TacGia")">
                            <i class="fa fa-fw fa-times"></i>
                        </a>
                    </div>
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900">Chi tiết tác giả: @Model.name</h1>
                        </div>
                        <hr />
                        <div class="row details">
                            <div class="text-sm-center col-md-3 details-title">
                                @Html.DisplayNameFor(model => model.email)
                            </div>
                            <div class="text-sm-left col-md-9">
                                @Html.DisplayFor(model => model.email)
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="text-sm-center col-md-3 details-title">
                                @Html.DisplayNameFor(model => model.website)
                            </div>
                            <div class="text-sm-left col-md-9">
                                @Html.DisplayFor(model => model.website)
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="text-sm-center col-md-3 details-title">
                                @Html.DisplayNameFor(model => model.note)
                            </div>
                            <div class="text-sm-left col-md-9">
                                @Html.DisplayFor(model => model.note)
                            </div>
                        </div>
                        <hr />                                           
                        <div class="row">
                            <div class="col-md-8">
                                <a href="@Url.Action("Edit", "ql_TacGia", new { id = Model.id})" class="btn btn-warning btn-user btn-block" onclick="return confirm('Bạn có muốn sửa tác giả @Model.name?')">
                                    <i class="fa fa-fw fa-edit"></i> Sửa thông tin tác giả
                                </a>
                            </div>
                            <div class="col-md-4">
                                <a href="@Url.Action("Delete", "ql_TacGia", new { id = Model.id})" class="btn btn-google btn-user btn-block" onclick="return confirm('Bạn có muốn xoá tác giả @Model.name?')">
                                    <i class="fa fa-fw fa-trash"></i> Xoá tác giả
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>