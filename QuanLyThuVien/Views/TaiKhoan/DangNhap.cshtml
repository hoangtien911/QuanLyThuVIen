@model QuanLyThuVien.Models.User

@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Start Bradcaump area -->
<div class="ht__bradcaump__area bg-image--6">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="bradcaump__inner text-center">
                    <h2 class="bradcaump-title">TÀI KHOẢN</h2>
                    <nav class="bradcaump-content">
                        <a class="breadcrumb_item" href="@Url.Action("HomePage","TrangChu")">Trang chủ</a>
                        <span class="brd-separetor">/</span>
                        <span class="breadcrumb_item active">Đăng nhập</span>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Bradcaump area -->
<!-- Start My Account Area -->
<section class="my_account_area pt--80 pb--55 bg--white">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-12 mx-auto">
                <div class="my__account__wrapper">
                    <h3 class="account__title">ĐĂNG NHẬP</h3>
                    @using (Html.BeginForm(FormMethod.Post))
                    {        
                        <div class="account__form">
                            <span class="forget_pass" style="margin-top: 0;" id="thongBao">@(ViewBag.thongbao != null ? ViewBag.thongbao : "")</span>
                            <div class="input__box">
                                <label>Tên tài khoản<span>*</span></label>
                                @Html.TextBoxFor(model => model.username)
                            </div>
                            <div class="input__box">
                                <label>Mật khẩu<span>*</span></label>
                                @Html.TextBoxFor(model => model.password, new { @type = "password" })
                            </div>
                            <div class="form__btn">
                                <button type="submit">Đăng nhập</button>
                                <label class="label-for-checkbox" style="display: inline-flex">                                
                                    @Html.CheckBoxFor(model => model.remember, new { @class = "input-checkbox" })                                
                                    <span class="span_remember" >Ghi nhớ đăng nhập</span>
                                </label>
                            </div>
                            <a class="forget_pass" href="#">Quên mật khẩu?</a>                          
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End My Account Area -->
